<div class="row mt-4">

  {{#if interests.length}}
  <div class="col-md-6 project-list">
    <h3>Current interests:</h3>

    {{#each interests as |interest|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/interests/{{interest.id}}">{{interest.description}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{interest.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
